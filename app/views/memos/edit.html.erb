<%= render partial: 'shared/page_title', locals: { title: "#{@memo.object.nickname}さんへのメモ編集" } %>
<%= @memo.memo %>
<%= form_with(model: @memo, url: user_memo_path(@memo.object, @memo.subject), class: 'form', local: true) do |f| %>
  <div class="field">
    <%= f.label(:memo, 'メモ※この情報は他ユーザーには公開されません') %><br />
    <%= f.text_area(:memo) %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>