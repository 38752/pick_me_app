<div class="hima-unit", id="">
  <h4>
    <%= "id:#{hima.id}/タイトル:#{hima.title}" %>
  </h4>
  <div>
    <% if hima.user.images.attached? %>
      <span><%= link_to image_tag(hima.user.images[0].variant( resize: "200x200>" ).processed, class: "icon-image"), user_path(hima.user) %></span>
    <% else %>
      <span><%= link_to image_tag('new_user_icon.png', class: "icon-image"), user_path(hima.user) %></span>
    <% end %>
    <%= link_to hima.user.nickname, user_path(hima.user) %>
  </div>
  <div>
    <% if hima.location != "" %>
      <%= hima.location %>
    <% else %>
    <em><%= "場所指定なし" %></em>
    <% end %>
  </div>
  <div>
    <%= hima.text %>
  </div>
  <ul><h5>タグ</h5>
    <% hima.hima_purposes.each do |purpose| %>
      <% if purpose.flag == 1 %>
        <li><%= purpose.purpose.name %></li>
      <% end %>
    <% end %>
  </ul>
  <div>
    <% if user_signed_in? %>
      <% if hima.user != current_user %>
        <% if hima. hit_ons.where(user_id: current_user.id).empty? %>
          <div class="hit_on-status-container">
            <span class="create-hit_on-button hit_on-status" >
              <%= image_tag('body_te.png', class: 'hit_on-hand') %>
              <span><%# JavaScript %></span>
            </span>
          </div>
          <div class="hit_on-form-container">
            <%= form_with(model: @hit_on, url: '#', class: "hit_on-form", data: {id: hima.id}, local: true) do |f|  %>
              <div class="field">
                <div>
                  <%= f.text_area :line %>
                </div>
              </div>
              <div class="actions">
                <%= f.submit "送信" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="hit_on-status-container">
            <span class="already-hit_on hit_on-status" >
              <span>リクエスト済みです</span>
            </span>
          </div>
          <div class="hit_on-container">
            <%#= "ここにhit_onの内容？" %>
          </div>
        <% end %>
      <% else %>
        <div>
          <span >
            あなたの投稿です
          </span>
        </div>
      <% end %>
    <% else %>
      <div>
        <span>
          リクエストを送るには<a href='/users/sign_in'>ログイン</a>または<a href='/users/sign_up'>新規登録</a>してください
        </span>
      </div>
    <% end %>
  </div>
</div>